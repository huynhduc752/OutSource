
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}
<div class="data-content ml-2 mr-2">
    <div class="row pb-2 pt-3">
        <div class="title-form col-md-8">
            <h3 class="m-0">Quản lý danh mục sản phẩm</h3>
        </div>
        <div class="col-md-4 header-data d-flex justify-content-between">
            <input class="searchInput form-control mr-2 w-75" name="search" placeholder="Nhập để tìm kiếm" />
            <button class="btn btnAdd btn-primary w-25">Thêm mới</button>
        </div>
    </div>
    <div class="main-form row">
        <div class="col-md-8 data-table " id="viewTable">
            @*đây là table*@
        </div>
        <div class="col-md-4 form-data">
            <div class="title" style="background:#479697">
                <h6 class="text-white align-self-center p-3 m-0">Nhập/Sửa danh mục sản phẩm</h6>
            </div>
            <div class="main-form bg-white p-2 pb-4">

                <input type="number" name="Id" id="Id" value="0" hidden>

                <div class="form-group mt-2">
                    <label>[Mã danh mục]</label>
                    <input type="text" class="form-control" name="Code" placeholder="Nhập mã danh mục" maxlength="10">
                </div>

                <div class="form-group mt-2">
                    <label>[Tên danh mục]</label>
                    <input type="text" class="form-control" name="Name" placeholder="Nhập tên danh mục" />
                </div>

                <div class="form-group mt-2">
                    <label>[Số thứ tự]</label>
                    <input type="number" class="form-control" name="OrderBy" placeholder="Nhập số thứ tự" min="0" value="0" />
                </div>

                <div class="form-group mt-2" hidden>
                    <label>[Danh mục]</label>
                    <input type="number" class="form-control" name="ParentId" value="0" />
                </div>

                <div class="form-group mt-2">
                    <input type="radio" name="Status" id="IsActive" checked /><label class="ml-1 mr-3" for="IsActive">Hoạt động</label>
                    <input type="radio" name="Status" id="NotActive" /><label class="ml-1 mr-3" for="NotActive">Không Hoạt động</label>
                </div>

                <div class="list-button d-flex justify-content-end">
                    <button class="btn btnCancel btn-secondary">Hủy bỏ</button>
                    <button class="btn btnUpdate btn-success ml-3">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>

    <div class="view-detail">
        <div class="modal fade" id="CategoryDetail" role="dialog">
            <div class="modal-dialog modal-lg">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h5>Chi tiết danh mục sản phẩm</h5>
                        <button type="button" class="close" data-dismiss="modal" style="outline:none">&times;</button>
                    </div>
                    <div class="modal-body">
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        $(document).ready(function () {
            let pageNumber = 1;
            $('.btnAdd').click(function () {
                RefeshForm();
            })
            $('.btnCancel').click(function () {
                RefeshForm();
            })
            // action
            // view data
            GetViewData(1, '', 0);
            AddOrUpdate();
            Search();


            // view ra table data
            function GetViewData(pageNumber, search, Parent) {
                $.ajax({
                    url: '/Admins/Category/_ViewTable',
                    type: 'post',
                    dataType: 'html',
                    data: {
                        pageNumber: pageNumber,
                        search: search,
                        Parent: Parent
                    },
                    beforeSend: function () {
                    },
                    success: function (res) {
                        $('#viewTable').html('');
                        $('#viewTable').html(res);
                        $('.main-form input[name=ParentId]').val($('#Parent').val())
                    },
                    error: function (error) {
                    },
                    complete: function () {
                        SetObjectToForm();
                        DeleteById();
                        ChangePage();
                        ViewDetail();
                        GetSubList();
                        BackTable();
                    }
                })
            }
            // chuyển phân trang
            function ChangePage() {
                $('.pagination li a').click(function () {
                    pageNumber = $(this).attr('data-index');
                    let search = $(".searchInput").val();
                    let Parent = $('#Parent').val();
                    GetViewData(pageNumber, search, Parent);
                })
            }
            // tìm kiếm
            function Search() {
                $('.searchInput').keyup(function () {
                    let search = $(this).val();
                    let Parent = $('#Parent').val();
                    GetViewData(1, search, Parent);
                })

            }
            // view ra bảng con
            function GetSubList() {
                $('.btnSubList').click(function () {
                    let ParentId = $(this).attr('data-id');
                    $('.main-form input[name=ParentId]').val(ParentId);
                    GetViewData(1, '', ParentId);
                })
            }
            // quay bảng chính
            function BackTable() {
                $('.btnBack').click(function () {
                    let ParentId = 0;
                    GetViewData(1, '', ParentId);
                })
            }

            // form update data
            // get category by id
            function SetObjectToForm() {
                $('.btnEdit').click(function () {
                    let Id = $(this).attr('data-id');
                    $.ajax({
                        url: '/Admins/Category/GetCategoryById',
                        type: 'post',
                        dataType: 'json',
                        data: {
                            id: Id
                        },
                        beforeSend: function () {

                        },
                        success: function (res) {
                            let obj = res;
                            $.each(obj, function (key, value) {

                                if (key == "Status") {
                                    if (value == true) {
                                        $('#IsActive').prop('checked', true);
                                    }
                                    else {
                                        $('#NotActive').prop('checked', true);
                                    }
                                }
                                else {
                                    $("input[name=" + key + "]").val(value);
                                }
                            })
                        },
                        error: function () {

                        },
                        complete: function () {

                        }
                    })
                })
            }


            // form thêm danh mục
            function AddOrUpdate() {
                $('.btnUpdate').click(function () {
                    let category = new Object();
                    $('.main-form input').each(function () {
                        category[$(this).attr('name')] = $(this).val();
                    })
                    category["Status"] = $("#IsActive").is(':checked');
                    console.log(category);
                    $.ajax({
                        url: '/Admins/Category/AddOrUpdate',
                        type: 'post',
                        dataType: 'json',
                        data: {
                            category: category
                        },
                        beforeSend: function () {

                        },
                        success: function (res) {
                            if (res == true) {
                                if ($('#Id').val() == 0)
                                    toastr.success("Thêm thành công");
                                else
                                    toastr.success("Sửa thành công");
                                RefeshForm();
                            }
                            else {
                                if ($('#Id').val() == 0)
                                    toastr.error("Thêm thất bại");
                                else
                                    toastr.error("Sửa thất bại");
                            }
                        },
                        error: function () {

                        },
                        complete: function () {
                            let Parent = category["ParentId"];
                            GetViewData(pageNumber, '', Parent);
                        }
                    })
                })
            }


            // xem chi tiết
            function ViewDetail() {
                $('.btnInfo').click(function () {
                    let id = $(this).attr('data-id');
                    $.ajax({
                        url: '/Admins/Category/_ViewDetail',
                        dataType: 'html',
                        type: 'post',
                        data: {
                            id: id
                        },
                        success: function (res) {
                            $('.modal-body').html('');
                            $('.modal-body').html(res);
                        }

                    })

                })
            }


            // xóa
            function DeleteById() {
                $('.btnDelete').click(function () {
                    swal({
                        title: "Bạn có chắc muốn xóa không?",
                        text: "Dữ liệu xóa không thể khôi phục lại!",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true,
                    })
                        .then((willDelete) => {
                            if (willDelete) {
                                let id = $(this).attr('data-id');
                                $.ajax({
                                    url: '/Admins/Category/Delete',
                                    type: 'post',
                                    dataType: 'json',
                                    data: {
                                        id: id
                                    },
                                    beforeSend: function () {

                                    },
                                    success: function (res) {
                                        if (res == true) {
                                            if ($('#Id').val() == 0)
                                                toastr.success("Xóa thành công");
                                        }
                                        else {
                                            toastr.error("Xóa thất bại");
                                        }
                                    },
                                    error: function () {

                                    },
                                    complete: function () {
                                        let Parent = $('#Parent').val();
                                        GetViewData(pageNumber, '', Parent);
                                    }
                                })
                                swal("Bạn đã xóa thành công !", {
                                    icon: "success",
                                });
                            } else {
                                swal("Hủy tác vụ");
                            }
                        });

                })

            }


            function RefeshForm() {
                $('.main-form input').each(function () {
                    $(this).val('');
                })
                $('#Id').val(0);
                $('input[name=Status]').val(0);
                $('#IsActive').prop('checked', true);
            }
        })
    </script>
}
