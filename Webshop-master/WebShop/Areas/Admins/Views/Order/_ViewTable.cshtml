@* đón dữ liệu từ controller*@
@model IEnumerable<WebShop.ViewModel.OrderViewModel>

<table class="table table-hover table-responsive-md">
    <thead>
        <tr>
            <th>Nhân viên</th>
            <th>Khách hàng</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.admin.Name</td>
            <td>@item.customer.Name</td>
            <td>@item.order.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
            @if (item.order.Status == 0)
            {
                <td><span class="badge badge-success">Đã xong</span></td>
            }
            else if (item.order.Status == 1)
            {
                <td><span class="badge badge-warning">Chưa duyệt</span></td>
            }
            else if (item.order.Status == 2)
            {
                <td><span class="badge badge-danger">Hủy</span></td>
            }

            <td>
                <button class="btnInfo bg-info" data-id="@item.order.Id" data-toggle="modal" data-target="#CategoryDetail"><i class="fas fa-info-circle"></i></button>
                <button class="btnEdit bg-warning" data-id="@item.order.Id"><i class="fas fa-pencil-alt"></i></button>
                <button class="btnDelete bg-danger" data-id="@item.order.Id"><i class="far fa-trash-alt"></i></button>
            </td>
        </tr>
        }

    </tbody>

    <tfoot>

    </tfoot>

</table>

<div class="pagination-container">
    <ul class="pagination">
        @if (ViewBag.countPage <= 4)
        {
            for (int index = 1; index <= ViewBag.countPage; index++)
            {
                if (index == ViewBag.pageNumber)
                {
                    <li class="active"><a data-index="@index">@index</a></li>
                }
                else
                {
                    <li><a data-index="@index">@index</a></li>
                }
            }
        }
        else
        {
            if (ViewBag.pageNumber <= 2)
            {
                for (int index = 1; index <= 4; index++)
                {
                    if (index == ViewBag.pageNumber)
                    {
                        <li class="active"><a data-index="@index">@index</a></li>
                    }
                    else
                    {
                        <li><a data-index="@index">@index</a></li>
                    }
                }
                <li><a class="nextPage" data-index="@ViewBag.countPage"><i class="fas fa-chevron-right"></i></a></li>
            }
            else if (ViewBag.pageNumber >= ViewBag.countPage - 2)
            {
                <li><a class="prevPage" data-index="1"><i class="fas fa-chevron-left"></i></a></li>

                for (int index = ViewBag.countPage - 3; index <= ViewBag.countPage; index++)
                {
                    if (index == ViewBag.pageNumber)
                    {
                        <li class="active"><a data-index="@index">@index</a></li>
                    }
                    else
                    {
                        <li><a data-index="@index">@index</a></li>
                    }
                }
            }
            else
            {
                <li><a class="prevPage" data-index="1"><i class="fas fa-chevron-left"></i></a></li>
                for (int index = ViewBag.pageNumber - 1; index <= ViewBag.pageNumber + 2; index++)
                {
                    if (index == ViewBag.pageNumber)
                    {
                        <li class="active"><a data-index="@index">@index</a></li>
                    }
                    else
                    {
                        <li><a data-index="@index">@index</a></li>
                    }
                }
                <li><a class="nextPage" data-index="@ViewBag.countPage"><i class="fas fa-chevron-right"></i></a></li>
            }
        }

    </ul>
</div>