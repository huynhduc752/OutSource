    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Home/GetCategory',
                type: 'post',
                dataType: 'json',
                data: {

                },
                success: function (res) {
                    let cate = res;
                    let row = ``;
                    $(cate).each(function (index, item) {
                        row += `<li>
                                        <a href="/danh-muc/${item.Slug}-${item.Id}">${item.Name}</a>
                                    </li>`;
                    });

                    $('.menu-two').html('');
                    $('.menu-two').append(row);

                },
                error: function (error) {

                }
            })

            $.ajax({
                url: '/Home/GetInformation',
                type: 'post',
                dataType: 'json',
                data: {

                },
                success: function (res) {
                    let row = `<div class="d-flex align-items-center justify-content-between">
                                    <ul class="w-75">
                                        <li><b>Địa Chỉ:</b> ${res.Address} </li>
                                        <li><b>Hotline:</b> ${res.Phone}</li>
                                        <li><b>Email:</b> ${res.Email}</li>
                                    </ul>

                                    <div class="logo-page ml-auto">
                                        <a href="#">
                                            <img class="" src="${res.Logo}" />
                                        </a>
                                    </div>
                                </div>`;
                    $('footer .container').append(row);
                    $('.logoWeb').append(`<img src="${res.Logo}" />`)

                },
                error: function (error) {

                }
            })


        })
    </script>

