                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script>
            //debugger;
            let num = $('.number-pro').attr('data-value');
            $('.number-pro').text(num);
            let m = $('.number-pro').attr('data-pay');
            let x = num * m;
            $('.thanh-tien').attr('data-money', x);
            let tt = $('.thanh-tien').attr('data-money');
            $('.here').text(tt);


        $('.cart .number-add').click(function () {
            let temp = $('#tongTriGia').attr('data-value');
                let res = $(this).siblings('.value-pro').attr('data-value');
                let mon = $(this).siblings('.value-pro').attr('data-pay');
            let money = parseInt(mon);
            let pay = parseInt(temp);
            let payment = pay + money;
                res++;
            let sum = res * money;
            $('#tongTriGia').attr('data-value', payment);
                $(this).siblings('.value-pro').attr('data-value', res);
                $(this).siblings('.value-pro').text(res);
                $(this).parent().parent().siblings('.money').children('.thanh-tien').attr('data-money', sum);
            $(this).parent().parent().siblings('.money').children('.thanh-tien').children('.here').text(sum);
            $('#tongTriGia').text(payment);
            })
        $('.cart .number-sub').click(function () {
            let temp = $('#tongTriGia').attr('data-value');
                let res = $(this).siblings('.value-pro').attr('data-value');
                let mon = $(this).siblings('.value-pro').attr('data-pay');
                let money = parseInt(mon);
                let pay = parseInt(temp);
            if (res > 0) {
                let payment = pay - money;
                    res--;
                let sum = res * money;
                $('#tongTriGia').attr('data-value', payment);
                    $(this).siblings('.value-pro').attr('data-value', res);
                    $(this).siblings('.value-pro').text(res);
                    $(this).parent().parent().siblings('.money').children('.thanh-tien').attr('data-money', sum);
                $(this).parent().parent().siblings('.money').children('.thanh-tien').children('.here').text(sum);
                $('#tongTriGia').text(payment);
                }

            })
    </script>
    }